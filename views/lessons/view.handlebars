<div class="dark">
  <div class="home-inner">
    <div class="container">
      <div class="col-lg-12">

        {{#each lessons}}

        <div class="card bg-info text-center card-form mt-2">
          <div class="card-body">

            <h3 class="card-title">Notebook {{lessonId}} - {{title}}</h3>
            <p class="text-md-center">{{description}}</p>
            <h3>Video Clip<h3>
            <a class="btn btn-danger" target="_blank" href={{videoLink}}>{{videoTitle}}</a>
            <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" src="{{videoLink}}" allowfullscreen></iframe></div>
            <h3>Career</h3>
            <a class="btn btn-danger" target="_blank" href={{careerLink}}>{{careerTitle}}</a>
            <h3>Movie</h3>
            <a class="btn btn-danger" target="_blank" href={{movieLink}}>{{movieTitle}}</a>
            <div class="embed-responsive embed-responsive-4by3">
            <iframe class="embed-responsive-item" src="{{movieLink}}" allowfullscreen></iframe>
            </div>
            <p>{{documentLink}}</p>
            <p>{{image}}</p>
            <!--
            <div class="imgwrapper">
            <img src="http://www.dropbox.com/sh/wicmo16uxzcoql4/AAB_u_DRNKmQPUkbqJDMTH_ha/GEO/images?dl=0&preview=GEO.jpeg" class="img-responsive">
            </div>-->



          </div>
        </div>


        {{else}}
        <div class="alert bg-info text-light text-center">
          There are no lessons available for {{subject}} - Semester {{semester}}
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>