<div class="card card-body">
  <h3 class="text-center text-dark">Add {{selectedSubjectName}} Notebook</h3>
  <form action="/lessons" method="post">
    <div class="form-group">
      <input type="hidden" name="subject" value="{{selectedSubject}}">
    </div>
    <div class="form-group">
      <label for="semester">Semester</label>
      <input type="number" class="form-control" name="semester">
    </div>
    <div class="form-group">
      <label for="lessonId">Notebook # </label>
      <input type="number" class="form-control" name="lessonId">
    </div>
    <div class="form-group">
      <label for="title">Notebook Title</label>
      <input type="text" class="form-control" name="title">
    </div>
    <div class="form-group">
      <label for="description">Notebook Description</label>
      <textarea class="form-control" name="description"></textarea>
    </div>
    <div class="form-group">
    <label for="colFormLabelSm">Videos</label>
      <div class="form-row">
        <div class="col-3">
          <input type="text" class="form-control" name="videoTitles" placeholder="Video Title">
        </div>
        <div class="col">
          <input type="text" class="form-control" name="videoLinks" placeholder="Video URL">
        </div>
      </div>      
    </div>
    <div class="form-group">
    <label for="career">Career</label>
      <div class="form-row">
        <div class="col-3">
          <input type="text" class="form-control" name="careerTitle" placeholder="Career Title">
        </div>
        <div class="col">
          <input type="text" class="form-control" name="careerLink" placeholder="Career Link">
        </div>
      </div>
    </div>
    <div class="form-group">
    <label for="movie">Movie</label>
      <div class="form-row">
        <div class="col-3">
          <input type="text" class="form-control" name="movieTitle" placeholder="Movie Title">
        </div>
        <div class="col">
          <input type="text" class="form-control" name="movieLink" placeholder="Movie Link">
        </div>
      </div>
    </div>
    <div class="form-group">
    <label for="docImage">Document and Image</label>
       <div class="form-row">
        <div class="col-3">
          <input type="text" class="form-control" name="documentLink" placeholder="Optional Document Link">
        </div>
        <div class="col">
          <input type="text" class="form-control" name="image" placeholder="Optional Image">
        </div>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>