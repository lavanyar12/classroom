{{#each errors}}
<div class="alert alert-danger">{{text}}</div>
{{else}} {{/each}}
<div class="card card-body">
  <h3 class="bg-dark text-white text-center">Edit Notebook</h3>
  <form action="/lessons/{{lesson.id}}?_method=PUT" method="post">
    <input type="hidden" name=_method value="PUT">

    <div class="form-group">
      <input type="hidden" name="subject" value="{{lesson.subject}}">
      <label for="semester">Semester</label>
      <input type="number" class="form-control" name="semester" value="{{lesson.semester}}">
    </div>
    <div class="form-group">
      <label for="lessonId">Notebook # </label>
      <input type="number" class="form-control" name="lessonId" value="{{lesson.lessonId}}">
    </div>
    <div class="form-group">
      <label for="title">Notebook Title</label>
      <input type="text" class="form-control" name="title" value="{{lesson.title}}">
    </div>
    <div class="form-group">
      <label for="description">Notebook Description</label>
      <textarea class="form-control" name="description">{{lesson.description}}</textarea>
    </div>
