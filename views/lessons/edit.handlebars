    </div>
    <div class="form-group">
    <label for="career">Career</label>
      <div class="form-row">
        <div class="col-3">
          <input type="text" class="form-control" name="careerTitle" value="{{lesson.careerTitle}}" placeholder="Career Title">
        </div>
        <div class="col">
          <input type="text" class="form-control" name="careerLink" value="{{lesson.careerLink}}" placeholder="Career Link">
        </div>
      </div>
    </div>
    <div class="form-group">
    <label for="movie">Movie</label>
      <div class="form-row">
        <div class="col-3">
          <input type="text" class="form-control" name="movieTitle" value="{{lesson.movieTitle}}" placeholder="Movie Title">
        </div>
        <div class="col">
          <input type="text" class="form-control" name="movieLink" value="{{lesson.movieLink}}" placeholder="Movie Link">
        </div>
      </div>
    </div>
    <div class="form-group">
    <label for="docImage">Document and Image</label>
      <div class="form-row">
        <div class="col-3">
          <input type="text" class="form-control" name="documentLink" value="{{lesson.documentLink}}" placeholder="Optional Document Link">
        </div>
        <div class="col">
          <input type="text" class="form-control" name="image" value="{{lesson.image}}" placeholder="Optional Image">
        </div>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Save your changes</button>
    <a href="/lessons" class="btn btn-danger" role="button" aria-pressed="true">Cancel</a>
  </form>
