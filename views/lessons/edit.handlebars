    <div class="form-group"">
    <label for="videos">Videos</label>
      {{#each lesson.videos as |video|}}
      <div id="{{@index}}" class="form-row">
        <div class="col-3">
          <input type="text" class="form-control" name="videoTitles" value="{{video.title}}" placeholder="Video Title #{{video.id}}">   
        </div>
        <div class="col">
          <input type="text" class="form-control" name="videoLinks" value="{{video.link}}" placeholder="Video URL #{{video.id}}">
        </div>
      </div>   
      {{/each}}
